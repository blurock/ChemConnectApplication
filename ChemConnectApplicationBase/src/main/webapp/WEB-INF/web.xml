<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">
<context-param>
		<param-name>callback</param-name>
		<param-value>/oauth2callback</param-value>
	</context-param>
	<context-param>
		<param-name>authdirectory</param-name>
		<param-value>.authorization-chemconnect</param-value>
	</context-param>	
	<context-param>
		<param-name>authfilename</param-name>
		<param-value>clientIDs.yaml</param-value>
	</context-param>
	<context-param>
	    <param-name>localhost</param-name>
	    <param-value>http://localhost:8080</param-value>
	</context-param>
	<context-param>
	    <param-name>remotehost</param-name>
	    <param-value>http://blurock-chemconnect.appspot.com</param-value>
	</context-param>
		<!-- Servlets -->
	<servlet>
		<servlet-name>gcsfileupload</servlet-name>
		<servlet-class>info.esblurock.reaction.core.server.base.activity.repositoryfile.FileUploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>gcsfileupload</servlet-name>
		<url-pattern>/gcsfileupload</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>callbackservlet</servlet-name>
		<servlet-class>info.esblurock.reaction.core.server.base.authentification.Oauth2CallbackServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>callbackservlet</servlet-name>
		<url-pattern>/oauth2callback</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>loginservice</servlet-name>
		<servlet-class>info.esblurock.reaction.core.server.base.authentification.LoginServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>loginservice</servlet-name>
		<url-pattern>/chemconnectapplicationbase/loginservice</url-pattern>
		<url-pattern>/loginservice</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>catalogaccess</servlet-name>
		<servlet-class>info.esblurock.reaction.core.server.base.services.BaseCatalogAccessImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>catalogaccess</servlet-name>
		<url-pattern>/chemconnectapplicationbase/catalogaccess</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>images</servlet-name>
		<servlet-class>info.esblurock.reaction.core.server.base.db.UserImageServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>images</servlet-name>
		<url-pattern>/chemconnectapplicationbase/images</url-pattern>
	</servlet-mapping>
			<filter>
		<filter-name>ObjectifyFilter</filter-name>
		<filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ObjectifyFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>info.esblurock.reaction.core.server.base.register.RegisterChemConnectBaseCatalogObjects</listener-class>
	</listener>
	
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>ChemConnectApplicationBase.html</welcome-file>
  </welcome-file-list>

</web-app>
